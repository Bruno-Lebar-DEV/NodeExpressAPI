{
  "name": "nodeexpressapi",
  "version": "1.0.0",
  "description": "O **NodeExpressAPI** é uma API REST robusta, desenvolvida em **Node.js** com **Express**, ideal para gerenciamento de dados, como usuários ou tarefas. O projeto enfatiza boas práticas de segurança, escalabilidade e documentação, garantindo integração eficiente com aplicações web e móveis.",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "homolog": "cross-env NODE_ENV=homolog node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "test:auth:register": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/auth/register.test.js --runInBand",
    "test:auth:login": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/auth/login.test.js --runInBand",
    "test:auth:protected": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/auth/protected.test.js --runInBand",
    "test:auth:role": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/auth/role-validation.test.js --runInBand",
    "test:auth:logout": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/auth/logout.test.js --runInBand",
    "test:auth:refresh": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/auth/refresh.test.js --runInBand",
    "test:auth:session-expired": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/auth/session-expired.test.js --runInBand",
    "test:auth": "npm run test:auth:register && npm run test:auth:login && npm run test:auth:protected && npm run test:auth:role && npm run test:auth:logout && npm run test:auth:refresh",
    "test:connection": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/database/connection.test.js --runInBand",
    "test:user:create": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/user/user-create.test.js --runInBand",
    "test:user:update": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/user/user-update.test.js --runInBand",
    "test:user:view": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/user/user-view.test.js --runInBand",
    "test:user:remove": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/user/user-remove.test.js --runInBand",
    "test:user:list": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/user/user-list.test.js --runInBand",
    "test:user": "npm run test:user:create && npm run test:user:update && npm run test:user:view && npm run test:user:remove && npm run test:user:list",
    "test:task:create": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/task/task-create.test.js --runInBand",
    "test:task:update": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/task/task-update.test.js --runInBand",
    "test:task:view": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/task/task-view.test.js --runInBand",
    "test:task:remove": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/task/task-remove.test.js --runInBand",
    "test:task:list": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/task/task-list.test.js --runInBand",
    "test:task": "npm run test:task:create && npm run test:task:update && npm run test:task:view && npm run test:task:remove && npm run test:task:list",
    "test:security:bruteforce": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/bruteforce-login.test.js --runInBand",
    "test:security:ratelimit": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/ratelimit-global.test.js --runInBand",
    "test:security:jwt": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/jwt-token.test.js --runInBand",
    "test:security:privilege": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/privilege-escalation.test.js --runInBand",
    "test:security:resource": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/resource-access.test.js --runInBand",
    "test:security:xss": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/xss-injection.test.js --runInBand",
    "test:security:http": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/http-methods.test.js --runInBand",
    "test:security:contenttype": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/content-type.test.js --runInBand",
    "test:security:headers": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/headers.test.js --runInBand",
    "test:security:userenum": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/security/user-enumeration.test.js --runInBand",
    "test:security": "npm run test:security:bruteforce && npm run test:security:ratelimit && npm run test:security:jwt && npm run test:security:privilege && npm run test:security:resource && npm run test:security:xss && npm run test:security:http && npm run test:security:contenttype && npm run test:security:headers && npm run test:security:userenum",
    "test:infra:health": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/infra/health.test.js --runInBand",
    "test:all:lint": "npm run lint && npm run test:all",
    "test:all": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests --runInBand --reporters=default",
    "test": "npm run test:all",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:all": "prettier --write \"src/**/*.{js,json,md}\" && prettier --write \"tests/**/*.{js,json,md}\" && prettier --write \"*.{js,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "node-cache": "^5.1.2",
    "redis": "^5.5.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1"
  }
}